<div class="row">
	<div class="col-md-2">
		
	</div>
	<div class="col-md-8">
		<h1>High Five!</h1>
		<div class="panel panel-default">

			<div class="panel-body center" id="refer">
				<h3>Invite your friends and get even more!</h3>
				<h2>Share your unique link via email, Facebook or Twitter and earn discounts on Hiker Meals.</h2>
				<div class="share-wrap">
					<div class="copy-link">
						<%= root_url %>?ref=<%= @signup.referral_code %>
					</div>

					<% twitter_message = "It's like having mountain men pack your #trailfood for you.  Check out @hikermeals!" %>
				    <div class="social-links">
				        <a href="http://www.facebook.com/sharer/sharer.php?u=<%= CGI::escape(root_url) %>?ref=<%= CGI::escape(@signup.referral_code) %>&title=Hiker Meals" class="fb" target="_blank"></a>
				        <div class="sep"></div>
				        <a href="http://twitter.com/share?url=<%= CGI::escape(root_url) %>?ref=<%= CGI::escape(@signup.referral_code) %>&text=<%= CGI::escape(twitter_message) %>" class="twit" target="_blank"></a>
				    </div>
				</div>


			</div>
		</div>
	</div>
	<div class="col-md-2">
	</div>
</div>

<% 
	referrals_count = @signup.referrals.count 
	if referrals_count >= 4
		panel_value="success"
	else
		panel_value="info"
	end

%>

<div class="row">
	<div class="col-md-2">
	</div>
	<div class="col-md-8">
		<div class="panel panel-<%= panel_value %>" >
			<div class="panel-heading">
				<h3 class="panel-title center">Your referrals</h3>
			</div>
			<div class="panel-body">
				<p>Refer five friends and get 25% off your first Hiker Meals purchase!  Refer ten friends and get 50% off!</p>
				
				<h3 class="center">Referrals:  <%= referrals_count %></h3>
			</div>
			<div class="panel-footer">
				<small>Your friends have to actually sign up, by the way.</small>
			</div>
		</div>
	
	</div>
	<div class="col-md-2">
	</div>
				